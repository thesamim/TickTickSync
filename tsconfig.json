{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"./vitest-setup.ts"
	],
	"exclude": [
		"node_modules/*"
	],
	"compilerOptions": {
		"types": [
			"svelte",
			"node"
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"inlineSources": true,
		"module": "ESNext",
		"target": "es2016",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	}
}
